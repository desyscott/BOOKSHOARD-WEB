<h1 class="page-header">Search books</h1>

<form action="/books" method="GET">

    <div class="form-row">
    <div class="form-item">
        <label for="title">Title</label>
        <input type="text" name="title" value="<%=searchParams.title%>">
    </div>
</div>
    
    <div class="form-row">
    <div class="form-item">
        <label for="publishBefore">Publish Before</label>
        <input type="date" name="publishBefore" value="<%=searchParams.publishBefore%>">
    </div>
    <div class="form-item">
        <label for="publishAfter">Publish After</label>
        <input type="date" name="publishAfter" value="<%=searchParams.publishAfter%>">
    </div>
</div>

    <div class="form-btn-end ">
    <button class="btn btn-primary" type="submit">Search</button>
</div>
</form>
<br>

<%-include("../partial/booksGrid.ejs",{books:books})%>